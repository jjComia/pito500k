{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/Users/JedComia/Library/pito500k/",   // Include MPFR header
                "-L/Users/JedComia/Library/Caches/Homebrew/downloads/",       // Link to MPFR library
                "-lmpfr",                    // Link MPFR
                "-lgmp",                     // Link GMP (dependency)
                "-g"                         // Enable debugging symbols
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}